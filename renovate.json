{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":docker",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
    ":label(renovate)"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.gitlab-ci\\.yml$"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?)\\sdepName=(?<depName>.*?)\n\\s+[A-Z]+_VERSION:\\s(?<currentValue>.*)"
      ]
    }
  ],
  "gitlabci-include": {
    "commitBody": "[skip-release]",
    "automerge": true,
    "gitLabAutomerge": true
  }
}
